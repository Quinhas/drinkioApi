{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "sourceMap": false,
    "strict": true,
    "removeComments": true,
    "lib": ["es6", "ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
