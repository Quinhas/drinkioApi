    //   "@controllers/*": ["./src/controllers/*"],
    //   "@config/*": ["./src/config/*"],
    //   "@utils/*": ["./src/utils/*"],
    //   "@models/*": ["./src/models/*"],
    //   "@repositories/*": ["./src/repositories/*"],
    //   "@middlewares/*": ["./src/middlewares/*"]
    // },
    "module": "CommonJS",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
